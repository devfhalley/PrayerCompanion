modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "ffmpeg-full", "fontconfig", "freetype", "libjpeg", "libpng", "pkg-config", "portmidi"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TestWebInterface"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd raspberry_pi && python serve_dual.py"
waitForPort = 5000

[[workflows.workflow]]
name = "TestWebInterface"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd raspberry_pi && python test_web_interface.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd raspberry_pi && python serve_dual.py"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
